            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Week"
            android:id="@+id/weekView"
            android:paddingBottom="10dp"
            android:layout_span="2"
            android:layout_gravity="center_horizontal" />

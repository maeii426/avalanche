<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/tableLogin"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context="booyah.test.MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/HeaderBlue">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_span="2"
            android:src="@drawable/login_header"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Username:"
            android:id="@+id/usernameView"
            android:layout_margin="15dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_margin="15dp"
            android:ems="10"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Season:"
            android:id="@+id/seasonView"
            android:layout_margin="15dp" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seasonSpinner"
            android:layout_margin="15dp"
            android:spinnerMode="dropdown" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Predictor:"
            android:id="@+id/predictorView"
            android:layout_margin="15dp" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/predictorSpinner"
            android:layout_margin="15dp"
            android:spinnerMode="dropdown" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_span="2"
        android:gravity="center"
        android:layout_marginTop="35dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="START  GAME"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/loginButton"
            android:layout_span="2"
            android:layout_gravity="center"
            android:padding="20dp"/>

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_span="2"
        android:gravity="center">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:id="@+id/instructButton"
            android:layout_span="2"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:padding="20dp"/>

    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/afterLogin"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</TableLayout>
